    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/test-web": "^0.0.68",
    "@vscode/vsce": "^3.3.2",
    "async-wait-until": "^2.0.27",
    "buffer": "^6.0.3",
    "chai": "^4.3.10",
    "constants-browserify": "^1.0.0",
    "copy-webpack-plugin": "^13.0.0",

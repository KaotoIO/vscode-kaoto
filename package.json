    "webpack-cli": "6.0.1",
    "webpack-merge": "6.0.1",
    "webpack-permissions-plugin": "^1.0.10"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "semver": "7.5.2",
    "dset": "^3.1.4",
    "cross-spawn": "^7.0.5",
    "yaml": "^2.7.0"
